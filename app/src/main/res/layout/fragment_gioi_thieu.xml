<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GioiThieu.GioiThieuFragment"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="350dp">
            <Button
                android:backgroundTint="#00BCD4"
                android:id="@+id/back"
                android:layout_gravity="left|center_vertical"
                android:textSize="30dp"
                android:text="@string/back"
                android:layout_width="60dp"
                android:layout_height="60dp"/>
            <Button
                android:backgroundTint="#00BCD4"
                android:id="@+id/next"
                android:layout_gravity="right|center_vertical"
                android:textSize="30dp"
                android:text="@string/next"
                android:layout_width="60dp"
                android:layout_height="60dp"/>
            <TextView
                android:id="@+id/tv_background"
                android:background="@drawable/img"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>
            <ImageView
                android:layout_gravity="center"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:src="@drawable/avatar" />
            <TextView
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="60dp"
                android:textSize="25dp"
                android:textStyle="bold"
                android:text="@string/nameuser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="25dp"
                android:textSize="20dp"
                android:text="Hehe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </FrameLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ccc"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:textSize="25dp"
            android:text="Thông tin cá nhân"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
            <TextView
                android:textSize="20dp"
                android:text="Họ tên:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"/>
            <TextView
                android:textSize="20dp"
                android:text="Nguyễn Quốc Khánh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
            <TextView
                android:textSize="20dp"
                android:text="Mã sinh viên:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"/>
            <TextView
                android:textSize="20dp"
                android:text="PH27525"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
            <TextView
                android:textSize="20dp"
                android:text="Lớp:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"/>
            <TextView
                android:textSize="20dp"
                android:text="CP17317"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
            <TextView
                android:textSize="20dp"
                android:text="Email:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"/>
            <TextView
                android:textSize="20dp"
                android:text="khanhnqph27525@fpt.edu.vn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
            <TextView
                android:textSize="20dp"
                android:text="Sống tại:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"/>
            <TextView
                android:textSize="20dp"
                android:text="Hà Nội"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>