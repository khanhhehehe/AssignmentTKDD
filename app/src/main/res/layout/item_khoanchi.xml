<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    android:layout_marginBottom="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/bg_coin">

        <TextView
            android:id="@+id/tv_khoanchi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginRight="10dp"
            android:textColor="#F44336"
            android:textStyle="bold"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_khoanchi"
            android:layout_alignTop="@+id/tv_khoanchi"
            android:layout_marginTop="25dp"
            android:textColor="#A1A1A1"
            android:textStyle="bold"
            android:textSize="17dp"/>

        <TextView
            android:id="@+id/tv_set_loaichi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/img_khoanchi_edt"
            android:layout_toRightOf="@+id/tv_khoanchi"
            android:layout_marginRight="10dp"
            android:textColor="#F44336"
            android:textStyle="bold"
            android:textSize="20dp"/>
        <ImageView
            android:id="@+id/img_khoanchi_edt"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/img_khoanchi_delete"
            android:src="@drawable/edite_vector"
            android:layout_marginRight="10dp"/>

        <ImageView
            android:id="@+id/img_khoanchi_delete"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/delete_vector" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>